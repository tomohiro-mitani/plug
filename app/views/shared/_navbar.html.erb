<div class="navbar sticky-top navbar-expand-sm navbar-light navbar-plug">
  <%= link_to root_path, class: "navbar-brand" do %>
  <%= image_tag "plug_logo.png", class: "navbar-brand-img" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <% if current_user.nil? %>
      <% image_src = "user_1.png" %>
    <% else %>
      <% current_user.image_url.nil? ? image_src = "user_1.png" : image_src =current_user.image_url %>
    <% end %>
    <span><%= image_tag image_src, class: "avatar dropdown-toggle", 'aria-haspopup': true, 'aria-expanded': false %></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Library",library_path, class: "nav-link", id: 'event-index' %>
      </li>
      <li class="nav-item">
        <%= link_to "Events", events_path, class: "nav-link", id: "event-index" %>
      </li>
      <li class="nav-item">
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
      <% else %>

      <% end %>
    </ul>
  </div>
</div>



