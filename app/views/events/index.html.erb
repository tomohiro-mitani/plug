<div class="container">
  <% if @main_event.nil? %>
    <div class="cta row justify-content-center">
      <div class="col-12 col-lg-6">
        <h1><%="We cannot find your location"%></h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <div class="card-product-event">
          <p>No event found</p>
          <%= image_tag("artist.png") %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="cta row justify-content-center">
      <div class="col-12 col-lg-6">
        <h2><%="Are you attending #{@main_event.artist}?"%></h2>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-6">
        <%= render "events/card", event: @main_event, sub_event: false %>
      </div>
    </div>
    <div class="cta row justify-content-center">
      <div class="col-12 col-lg-6">
        <h1>Today's other events close to you</h1>
      </div>
    </div>
    <% @sub_events.each do |event| %>
      <div class="row justify-content-center">
        <div class="col-12 col-lg-6">
          <%= render "events/card", event: event, sub_event: true %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
